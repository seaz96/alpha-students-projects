Table users { // сотрудники
  id uuid [primary key]
  email varchar
  password_hash varchar
  first_name varchar
  middle_name varchar
  last_name varchar
  position varchar
  role Role
}

Table cases { // кейсы, которые в голосовании
  id uuid [primary key]
  name varchar
  description text
  author_id uuid
  created_at datetime
}

Table likes { // лайки на заявках
  case_id uuid
  user_id uuid
  dislike boolean
  comment text
}

Table projects { // отобранные кейсы, которые утвердили
  id uuid [primary key]
  name varchar
  description text
  author_id uuid
  status integer
  created_at datetime
}

Table teams { // команда на проекте
  id uuid [primary key]
  name varchar
  project_id uuid
  teamproject_link varchar
}

Table students { // информация о студентах на проекте
  id uuid [primary key]
  name varchar
  phone varchar
  telegram varchar
  email varchar
}

Table teams_students { // связи (закладывается для авторизации студентов)
  team_id uuid
  student_id uuid
  academic_group varchar
  position varchar
}

Table meetings { // встреча
  id uuid
  name varchar
  date datetime
  results text
  summary text
  record varchar // link to record of meeting
  team_id uuid
  score integer // maybe to other table?
  previous uuid
  next uuid
}

Table todos {
  id uuid
  checked boolean
  parent_id uuid
  meeting_id uuid
}

Table stages { // этап
  id uuid
  team_id uuid
  name varchar
  start_date datetime
  end_date datetime
  urfu_score integer
  urfu_comment text
  mentor_comment text
  mentor_score integer
}

Table result_metas { // итоговая оценка
  id uuid
  team_id uuid
  score integer
  comment text
}

Ref: "projects"."author_id" > "users"."id"

Ref: "teams"."project_id" > "projects"."id"

Ref: "teams"."id" - "teams_students"."team_id"

Ref: "students"."id" - "teams_students"."student_id"

Ref: "teams"."id" < "meetings"."team_id"

Ref: "users"."id" < "likes"."user_id"

Ref: "cases"."id" < "likes"."case_id"

Ref: "teams"."id" < "stages"."team_id"

Ref: "teams"."id" < "result_metas"."team_id"

Ref: "todos"."meeting_id" > "meetings"."id"

Ref: "todos"."parent_id" > "todos"."id"
